// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   // INSPECTOR, KITCHEN_MANAGER, HOTEL_MANAGEMENT, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdForms       InspectionForm[]
  inspections        InspectionReport[] @relation("InspectorReports")
  reviewedReports    InspectionReport[] @relation("ReviewerReports")
  managedGuidelines  Guideline[]
}

model InspectionForm {
  id        Int      @id @default(autoincrement())
  title     String
  version   Int      @default(1)
  questions String   // JSON string: Array of questions {id, text, type, options?, guidelineId?}
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById Int
  reports     InspectionReport[]
}

model InspectionReport {
  id          Int      @id @default(autoincrement())
  status      String   @default("DRAFT") // DRAFT, SUBMITTED, APPROVED, REJECTED
  data        String   // JSON string: Answers {questionId: answer}
  score       Float?
  remarks     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  submittedAt DateTime?

  form        InspectionForm @relation(fields: [formId], references: [id])
  formId      Int

  inspector   User     @relation("InspectorReports", fields: [inspectorId], references: [id])
  inspectorId Int

  reviewedBy    User?    @relation("ReviewerReports", fields: [reviewedById], references: [id])
  reviewedById  Int?
  reviewedAt    DateTime?
}

model Guideline {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  severity  String   @default("MINOR") // MINOR, MAJOR, CRITICAL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  updatedBy   User   @relation(fields: [updatedById], references: [id])
  updatedById Int
}
